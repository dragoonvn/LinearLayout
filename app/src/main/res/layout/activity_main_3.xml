<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="7"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:weightSum="4"
        android:orientation="horizontal"
        >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#389E11"
                android:layout_weight="3"
                android:gravity="center"
                android:textColor="#F3E5F5"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:text="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#f20"
            android:gravity="center"
            android:textColor="#F3E5F5"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            android:text="3"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="#96A34031"
                android:gravity="center"
                android:textColor="#F3E5F5"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:text="4"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:weightSum="4"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="#9698854C"
            android:gravity="center"
            android:textColor="#F3E5F5"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            android:text="2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="6"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical"
                android:weightSum="2"
                >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00ACC1"
                android:gravity="center"
                android:textColor="#F3E5F5"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:text="5"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#8E24AA"
                    android:gravity="center"
                    android:textColor="#F3E5F5"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                    android:text="6"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="vertical"
                android:weightSum="6"
                >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="#C0CA33"
                android:gravity="center"
                android:textColor="#F3E5F5"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:text="7"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#FF9100"
                    android:gravity="center"
                    android:textColor="#F3E5F5"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                    android:text="8"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#C51162"
                    android:gravity="center"
                    android:textColor="#F3E5F5"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                    android:text="9"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>